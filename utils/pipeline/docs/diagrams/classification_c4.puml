@startuml Classification System - C4 Diagram

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

' Define systems
System_Boundary(pipeline, "Document Pipeline") {
    Container(doc_classifier, "Document Classifier", "Python", "Manages document classification using multiple strategies")
    Container(classifier_factory, "Classifier Factory", "Python", "Creates and manages classifier instances")
    Container(ensemble_manager, "Ensemble Manager", "Python", "Combines results from multiple classifiers")
    
    Container(rule_based, "Rule-Based Classifier", "Python", "Classifies using configurable rules")
    Container(pattern_matcher, "Pattern Matcher", "Python", "Classifies using pattern matching")
    Container(ml_classifier, "ML-Based Classifier", "Python", "Classifies using machine learning")
    
    Container(config_manager, "Configuration Manager", "Python", "Manages classifier configurations")
}

' Define relationships
Rel(doc_classifier, classifier_factory, "Uses")
Rel(doc_classifier, ensemble_manager, "Uses")
Rel(classifier_factory, rule_based, "Creates")
Rel(classifier_factory, pattern_matcher, "Creates")
Rel(classifier_factory, ml_classifier, "Creates")
Rel(ensemble_manager, rule_based, "Gets results")
Rel(ensemble_manager, pattern_matcher, "Gets results")
Rel(ensemble_manager, ml_classifier, "Gets results")
Rel(doc_classifier, config_manager, "Uses")

@enduml
